body
{
    background: white;
    color: $base_text;
    background: white url(menu_bg.png) top repeat-x;
    margin: 5px;
    margin-right: 15px;
    margin-left: 15px;
}

hr
{
    border: none;
    height: 0px;
    margin-top: 0px;
}

div.toolSectionPad
{
    margin: 0;
    padding: 0;
    height: 5px;
    font-size: 0px;
}

div.toolSectionDetailsInner
{ 
  margin-left: 10px;
  margin-right: 10px;
}

div.toolSectionTitle
{
  padding-bottom: 0px;
  font-weight: bold;
}

div.toolTitle
{
  padding-top: 5px;
  padding-bottom: 5px;
  margin-left: 16px;
  margin-right: 10px;
  display: list-item;
  list-style: square outside;
}